doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="./css/style.css")
        title Document
    body 
        div.signup
            div.container
                div.signup__content
                    form.sigup.form(action="/signin", method="post")
                        h1.signup__title Авторизация
                        if( error )
                            p #{error}
                        input.form__input(name="email" type="email"  placeholder="Email")
                        input.form__input(name="password" type="password" required placeholder="Пароль")
                        
                        button.form__submit.btn(type="submit") Войти 
                         